<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Bibit</title>
        <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
    </head>

    <body>
        <nav class="navbar navbar-light" style="background-color: #63a4d3;">
            <a class="navbar-brand" href="<%= url %>">Bibit</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="<%= url %>">Home</a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link" href="<%= url %>contact">Pupuk</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="<%= url %>profile">Bibit</a>
                    </li>
                </ul>
            </div>
        </nav>

        <div class="container mt-5 pt-5">
            <h1>Bibit</h1>
            <a href="<%= url + 'bibit/add' %>" class="btn btn-success mb-3">Tambah Data Bibit</a>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Nama</th>
                        <th>Jumlah</th>
                        <th>Berat</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (bibits.length> 0) { %>
                        <% bibits.forEach(function(bibit) { %>
                            <tr>
                                <td>
                                    <%= bibit.nama %>
                                </td>
                                <td>
                                    <%= bibit.jumlah %>
                                </td>
                                <td>
                                    <%= bibit.berat %>
                                </td>
                                <td><a href="<%= url + 'bibit/edit/' + bibit.id %>"
                                        class="btn btn-warning btn-sm">Edit</a>
                                    <a href="<%= url + 'bibit/delete/' + bibit.id %>" class="btn btn-danger btn-sm"
                                        onclick="return confirm('Yakin di hapus ?')">Delete</a>
                                </td>
                            </tr>
                            <% }); %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="5" class="text-center">No Data</td>
                                    </tr>
                                    <% } %>
                </tbody>
            </table>
        </div>

        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    </body>

</html>